{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    //"outDir": "./dist",   // Output compiled JS files to a separate directory
    //"rootDir": "./src"    // Set root directory for your source files (optional but recommended)
  },
  "include": ["**/*.ts", "**/*.tsx", "schemaTypes/index.js"],
  "exclude": ["node_modules"]  // Exclude JS files to avoid conflicts

}
